---
const { title, url } = Astro.props;

const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
---

<div class="social-share">
  <span class="share-label">Bagikan:</span>
  
  <!-- WhatsApp -->
  <a href={`https://wa.me/?text=${encodedTitle}%20${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="share-btn whatsapp" aria-label="Share ke WhatsApp">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
    </svg>
  </a>

  <!-- Facebook -->
  <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="share-btn facebook" aria-label="Share ke Facebook">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
    </svg>
  </a>

  <!-- Twitter / X -->
  <a href={`https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="share-btn twitter" aria-label="Share ke Twitter">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
    </svg>
  </a>

  <!-- Telegram -->
  <a href={`https://t.me/share/url?url=${encodedUrl}&text=${encodedTitle}`} target="_blank" rel="noopener noreferrer" class="share-btn telegram" aria-label="Share ke Telegram">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="22" y1="2" x2="11" y2="13"></line>
      <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
    </svg>
  </a>

  <!-- Threads -->
  <a href={`https://www.threads.net/intent/post?text=${encodedTitle}%20${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="share-btn threads" aria-label="Share ke Threads">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 12a7 7 0 1 1-14 0 7 7 0 0 1 14 0Z"></path>
      <path d="M18.8 17.5a6 6 0 0 0-11.7-5.8 6 6 0 0 0 7.2 8.7A5 5 0 0 0 19 16"></path>
    </svg>
  </a>

  <!-- LinkedIn -->
  <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`} target="_blank" rel="noopener noreferrer" class="share-btn linkedin" aria-label="Share ke LinkedIn">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
      <rect x="2" y="9" width="4" height="12"></rect>
      <circle cx="4" cy="4" r="2"></circle>
    </svg>
  </a>

  <!-- Copy Link -->
  <button class="share-btn copy-link" id="copyLinkBtn" aria-label="Salin Link">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
      <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
    </svg>
  </button>
  <span id="copyFeedback" class="copy-feedback">Tersalin!</span>
</div>

<script>
  const copyBtn = document.getElementById('copyLinkBtn');
  const feedback = document.getElementById('copyFeedback');

  if (copyBtn) {
    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(window.location.href);
        feedback.classList.add('show');
        setTimeout(() => {
          feedback.classList.remove('show');
        }, 2000);
      } catch (err) {
        console.error('Gagal menyalin link:', err);
      }
    });
  }
</script>

<style>
  .social-share {
    display: flex;
    align-items: center;
    gap: 8px; /* Lebih rapat sedikit agar muat banyak */
    row-gap: 12px; /* Jarak antar baris */
    margin: 24px 0;
    padding-top: 24px;
    border-top: 1px solid var(--border);
    flex-wrap: wrap; /* Bungkus jika layar kecil */
    position: relative;
  }

  .share-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text);
    margin-right: 8px;
  }

  .share-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    color: var(--text); /* Lebih kontras dari text-secondary */
    background: var(--card-bg); /* Lebih terang dari sidebar-bg di dark mode */
    transition: all 0.2s ease;
    border: 1px solid var(--border);
    cursor: pointer;
  }

  .share-btn:hover {
    transform: translateY(-2px);
    color: #fff;
    border-color: transparent;
  }

  /* Brand Colors */
  .whatsapp:hover { background: #25D366; }
  .facebook:hover { background: #1877F2; }
  .twitter:hover { background: #1DA1F2; } /* Atau #000000 untuk X */
  .telegram:hover { background: #0088cc; }
  .threads:hover { background: #000000; }
  .linkedin:hover { background: #0077b5; }
  .copy-link:hover { background: var(--text); color: var(--bg); }

  /* Dark Mode Adjustments */
  :global(html.dark) .threads:hover { background: #ffffff; color: #000; }

  /* Feedback Tooltip */
  .copy-feedback {
    position: absolute;
    right: 0;
    top: 0;
    background: var(--text);
    color: var(--bg);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.2s;
    pointer-events: none;
  }

  .copy-feedback.show {
    opacity: 1;
    transform: translateY(30px); /* Muncul di sebelah tombol copy */
  }
</style>
