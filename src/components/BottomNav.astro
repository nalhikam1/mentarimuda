  <button id="nav-search-btn" class="nav-item">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="icon" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
    <span>Cari</span>
  </button>

  <button id="nav-topic-btn" class="nav-item">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="icon" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="8" y1="6" x2="21" y2="6"></line><line x1="8" y1="12" x2="21" y2="12"></line><line x1="8" y1="18" x2="21" y2="18"></line><line x1="3" y1="6" x2="3.01" y2="6"></line><line x1="3" y1="12" x2="3.01" y2="12"></line><line x1="3" y1="18" x2="3.01" y2="18"></line></svg>
    <span>Topik</span>
  </button>

  <button id="nav-saved-btn" class="nav-item">
    <div class="icon-wrapper">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" class="icon" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path></svg>
      <span id="bookmark-badge-mobile" class="badge" style="display: none;">0</span>
    </div>
    <span>Disimpan</span>
  </button>
</nav>

<script>
  function setupNav() {
    const badge = document.getElementById('bookmark-badge-mobile');

    function updateBadge(count) {
      if (!badge) return;
      if (count > 0) {
        badge.textContent = count;
        badge.style.display = 'flex';
      } else {
        badge.style.display = 'none';
      }
    }

    // Initial load from localStorage
    const saved = localStorage.getItem('mentari-bookmarks');
    if (saved) {
      const bookmarks = JSON.parse(saved);
      updateBadge(bookmarks.length);
    }

    // Listen to changes from Bookmark.svelte
    window.addEventListener('bookmarksChanged', (e) => {
      updateBadge(e.detail.count);
    });

    // Fungsi Tombol Cari
    document.getElementById('nav-search-btn')?.addEventListener('click', () => {
      // Dispatch event toggleSearch agar MainLayout yang handle animasinya
      window.dispatchEvent(new CustomEvent('toggleSearch'));
    });

    // Fungsi Tombol Topik (Membuka Sidebar Kanan di Mobile)
    document.getElementById('nav-topic-btn')?.addEventListener('click', () => {
      // Dispatch event agar MainLayout yang handle (termasuk backdrop & closing logic)
      window.dispatchEvent(new CustomEvent('toggleTopicSidebar'));
    });

    // Fungsi Tombol Disimpan (Bookmark)
    document.getElementById('nav-saved-btn')?.addEventListener('click', () => {
      // Dispatch event openSavedBookmarks
      window.dispatchEvent(new CustomEvent('openSavedBookmarks'));
    });

    // Highlight menu aktif (sederhana)
    const currentPath = window.location.pathname;
    
    // Reset active state
    document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));

    if (currentPath === '/' || currentPath === '') {
      document.querySelector('a.nav-item[href="/"]')?.classList.add('active');
    }
  }

  // Jalankan saat awal dan setiap navigasi
  document.addEventListener('astro:page-load', setupNav);
</script>

<style>
  .bottom-nav {
    display: none; /* Default hidden di desktop */
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: var(--card-bg); /* Use var */
    box-shadow: 0 -1px 10px rgba(0,0,0,0.05);
    border-top: 1px solid var(--border); /* Use var */
    z-index: 1000;
    justify-content: space-around;
    padding: 10px 0 12px;
  }

  /* Tampilkan hanya di mobile */
  @media (max-width: 640px) {
    .bottom-nav {
      display: flex;
    }
  }

  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: var(--text-secondary); /* Use var */
    font-size: 0.7rem;
    gap: 4px;
    flex: 1;
    background: none;
    border: none;
    cursor: pointer;
    font-family: inherit;
    position: relative;
  }

  .nav-item.active {
    color: var(--text); /* Use var */
  }
  
  .nav-item.active .icon {
    stroke: var(--text); /* Use var */
    stroke-width: 2.5;
  }

  .icon {
    width: 24px;
    height: 24px;
    margin-bottom: 2px;
  }

  .icon-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .badge {
    position: absolute;
    top: -6px;
    right: -8px;
    background: #FF6B6B;
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    padding: 0 4px;
    height: 16px;
    border-radius: 10px;
    min-width: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--card-bg);
    animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  @keyframes popIn {
    0% { transform: scale(0); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }
</style>
