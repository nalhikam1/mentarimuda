    flex-direction: row;
    align-items: center;
    gap: 8px;
    flex-shrink: 0;
    width: auto;
  }

  .post-container.list-view .post-link {
    flex-direction: row;
    align-items: center;
    gap: 0;
  }

  .post-container.list-view .post-title {
    font-size: 1.125rem;
    margin: 0;
  }

  .post-container.list-view .post-footer {
    border: none;
    padding: 0;
    margin-left: auto;
    flex-shrink: 0;
  }

  .post-container.list-view .post-meta {
    display: none;
  }
  
  .post-card { 
    padding: 24px; 
    border: 1px solid var(--card-border); 
    border-radius: 16px; 
    transition: all 0.3s ease;
    background: var(--card-bg);
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  
  .post-card:hover { 
    border-color: var(--text-secondary); 
    transform: translateY(-4px); 
    box-shadow: 0 12px 40px rgba(0,0,0,0.08);
  }

  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
    flex-wrap: wrap;
  }

  .post-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: var(--text);
    background: var(--sidebar-bg);
    padding: 4px 12px;
    border-radius: 12px;
    white-space: nowrap;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .post-category:hover {
    background: var(--text);
    color: var(--bg);
  }
  
  .post-meta { 
    font-size: 0.75rem; 
    color: var(--text-secondary); 
  }
  
  .post-link { 
    text-decoration: none; 
    color: inherit;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex: 1;
  }

  .post-title { 
    font-size: 1.25rem; 
    line-height: 1.3; 
    margin: 0; 
    font-weight: 700;
    letter-spacing: -0.5px;
    transition: color 0.2s ease;
    color: var(--text);
  }

  .post-link:hover .post-title {
    color: var(--text-secondary);
  }

  .post-footer {
    padding-top: 8px;
    border-top: 1px solid var(--border);
  }

  .post-author {
    font-size: 0.8125rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  /* Mobile Responsive */
  @media (max-width: 968px) {
    .hero-content {
      flex-direction: column;
      gap: 24px;
    }

    .hero-actions {
      padding-top: 0;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.25rem;
    }

    .post-container.grid-view {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .hero-section {
      margin-bottom: 40px;
      padding-bottom: 24px;
    }

    .hero-content {
      gap: 20px;
    }

    .hero-title {
      font-size: 1.75rem;
      letter-spacing: -0.5px;
    }

    .hero-subtitle {
      font-size: 0.9375rem;
    }

    .category-section {
      margin-bottom: 40px;
    }

    .section-header {
      margin-bottom: 20px;
      padding-bottom: 12px;
    }

    .section-title {
      font-size: 1.125rem;
    }

    .post-card {
      padding: 20px;
      gap: 10px;
    }

    .post-title {
      font-size: 1.125rem;
    }

    .post-category {
      font-size: 0.6875rem;
      padding: 3px 10px;
    }

    .post-meta {
      font-size: 0.6875rem;
    }

    .post-author {
      font-size: 0.75rem;
    }

    /* --- List View Mobile Optimization --- */
    .post-container.list-view {
      gap: 0; /* Rapatkan gap karena kita pakai border-bottom */
    }

    .post-container.list-view .post-card {
      flex-direction: column; /* Kembali ke vertikal agar tidak sempit */
      align-items: flex-start;
      padding: 20px 0; /* Padding atas bawah saja */
      border: none; /* Hilangkan border kotak */
      border-bottom: 1px solid var(--border); /* Ganti dengan garis pemisah */
      border-radius: 0; /* Hilangkan radius */
      gap: 8px;
    }

    .post-container.list-view .post-card:last-child {
      border-bottom: none;
    }

    .post-container.list-view .post-card:hover {
      transform: none; /* Matikan efek geser di mobile */
      box-shadow: none;
      background: transparent;
    }

    .post-container.list-view .post-header {
      width: 100%;
      margin-bottom: 4px;
    }

    .post-container.list-view .post-category {
      font-size: 0.7rem;
      padding: 2px 8px;
      background: transparent;
      padding-left: 0;
      color: var(--text-secondary);
      font-weight: 500;
    }

    .post-container.list-view .post-meta {
      display: inline-block; /* Tampilkan kembali meta di mobile list */
      font-size: 0.7rem;
    }

    .post-container.list-view .post-title {
      font-size: 1.125rem;
      line-height: 1.4;
    }

    .post-container.list-view .post-footer {
      display: none; /* Sembunyikan footer/author di list mobile agar clean */
    }
  }
</style>