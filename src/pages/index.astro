  }
  
  .section-header { 
    display: flex; 
    justify-content: space-between; 
    align-items: center; 
    margin-bottom: 28px; 
    padding-bottom: 12px; 
    border-bottom: 2px solid var(--border);
    flex-wrap: wrap;
    gap: 16px;
  }
  
