---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';
import ViewToggle from '../../components/ViewToggle.svelte';
import { slugify } from '../../utils/slugify';

// Ambil semua artikel
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// List kategori unik untuk filtering
const categories = [
  "Mindful Writing",
  "Teknologi", 
  "Review", 
  "Tips dan Trik", 
  "Kebijaksanaan", 
  "Nasional", 
  "Internasional", 
  "Inspirasi",
  "Pengembangan Diri",
  "Kreativitas"
];

const totalPosts = sortedPosts.length;
---

<MainLayout 
  title="Semua Tulisan - Mentari Muda" 
  hideRightSidebar={true}
  description="Kumpulan seluruh tulisan di Mentari Muda. Jelajahi berbagai topik mulai dari mindfulness hingga teknologi."
>
  <div class="archive-header">
    <div class="header-content">
      <h1 class="archive-title">Semua Tulisan</h1>
      <p class="archive-subtitle">Menampilkan {totalPosts} artikel pilihan untuk menemani proses bertumbuhmu.</p>
    </div>
    <div class="archive-actions">
      <ViewToggle client:load />
    </div>
  </div>

  <!-- Filtering Section -->
  <div class="filter-section">
    <div class="filter-label">Filter berdasarkan topik:</div>
    <div class="filter-tags">
      <a href="/tulisan" class="filter-tag active">Semua</a>
      {categories.map(cat => (
        <a href={`/kategori/${slugify(cat)}`} class="filter-tag">{cat}</a>
      ))}
    </div>
  </div>

  <div class="post-container grid-view" data-view-container>
    {sortedPosts.map(post => {
      const category = post.data.category || (post.data.tags && post.data.tags[0]) || 'Umum';
      return (
        <article class="post-card">
          <a href={`/blog/${post.slug}`} class="post-link">
            <h3 class="post-title">{post.data.title}</h3>
          </a>
          <div class="post-header">
            <a href={`/kategori/${slugify(category)}`} class="post-category">{category}</a>
            <span class="post-meta">
              {post.data.pubDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'short' })} Â· 
              {Math.ceil(post.body.split(' ').length / 200)} min read
            </span>
          </div>
          <div class="post-footer">
            <span class="post-author">Oleh <a href="/naufalmuhammadalhikam">{post.data.author}</a></span>
          </div>
        </article>
      );
    })}
  </div>
</MainLayout>

<script>
  // Reuse logic view mode dari index.astro
  function updateViewMode(mode) {
    const containers = document.querySelectorAll('[data-view-container]');
    containers.forEach(container => {
      if (mode === 'list') {
        container.classList.add('list-view');
        container.classList.remove('grid-view');
      } else {
        container.classList.add('grid-view');
        container.classList.remove('list-view');
      }
    });
  }

  document.addEventListener('astro:page-load', () => {
    const savedMode = localStorage.getItem('mentari-view-mode') || 'grid';
    updateViewMode(savedMode);
  });

  window.addEventListener('viewModeChange', (e) => {
    updateViewMode(e.detail);
  });
</script>

<style>
  .archive-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 40px;
    padding-bottom: 30px;
    border-bottom: 1px solid var(--border);
    gap: 20px;
  }

  .archive-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: -1px;
    margin-bottom: 8px;
    color: var(--text);
  }

  .archive-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  /* Filter Styling */
  .filter-section {
    margin-bottom: 40px;
  }

  .filter-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .filter-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .filter-tag {
    padding: 8px 18px;
    background: var(--card-bg);
    border: 1px solid var(--border);
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .filter-tag:hover {
    border-color: var(--text);
    color: var(--text);
    transform: translateY(-2px);
  }

  .filter-tag.active {
    background: var(--text);
    color: var(--bg);
    border-color: var(--text);
  }

  /* Reuse Article Card Styles */
  .post-container.grid-view { 
    display: grid; 
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); 
    gap: 24px; 
  }

  .post-container.list-view {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .post-card { 
    padding: 24px; 
    border: 1px solid var(--card-border); 
    border-radius: 16px; 
    transition: all 0.3s ease;
    background: var(--card-bg);
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .post-card:hover { 
    border-color: var(--accent); 
    transform: translateY(-4px); 
    box-shadow: 0 12px 40px rgba(0,0,0,0.08);
  }

  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 12px;
  }

  .post-category {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--accent);
    text-decoration: none;
  }

  .post-meta { 
    font-size: 0.75rem; 
    color: var(--text-secondary); 
  }

  .post-link { text-decoration: none; color: inherit; }

  .post-title { 
    font-size: 1.25rem; 
    line-height: 1.4; 
    font-weight: 700;
    color: var(--text);
  }

  .post-footer {
    padding-top: 12px;
    margin-top: auto;
    border-top: 1px solid var(--border);
  }

  .post-author {
    font-size: 0.8125rem;
    color: var(--text-secondary);
  }

  /* List View specifics */
  .post-container.list-view .post-card {
    flex-direction: row;
    align-items: center;
    padding: 16px 24px;
    gap: 32px;
  }

  .post-container.list-view .post-link {
    flex: 1;
    order: 1;
  }

  .post-container.list-view .post-header {
    width: 280px;
    flex-shrink: 0;
    order: 2;
    border: none;
    margin: 0;
    padding: 0;
    justify-content: flex-start;
  }

  .post-container.list-view .post-footer {
    width: 200px;
    flex-shrink: 0;
    order: 3;
    border: none;
    margin: 0;
    padding: 0;
    text-align: right;
  }

  /* Mobile */
  @media (max-width: 968px) {
    .archive-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .archive-actions {
      display: none;
    }

    .archive-title {
      font-size: 2rem;
    }

    .post-container.list-view .post-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .post-container.list-view .post-header {
      width: 100%;
    }
  }
</style>
